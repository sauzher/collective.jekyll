<?xml version="1.0"?>
<registry>
  <records interface="collective.jekyll.interfaces.IJekyllSettings" />
  <record name="collective.jekyll.symptoms.IdLengthSymptom.maximum">
        <field type="plone.registry.field.Int">
            <title>Id : maximum number of characters.</title>
            <min>1</min>
        </field>
        <value>20</value>
  </record>
  <record name="collective.jekyll.symptoms.TitleLengthSymptom.maximum">
        <field type="plone.registry.field.Int">
            <title>Title : maximum number of siginificant words.</title>
            <min>0</min>
        </field>
        <value>5</value>
  </record>
  <record name="collective.jekyll.symptoms.DescriptionLengthSymptom.maximum">
        <field type="plone.registry.field.Int">
            <title>Description : maximum number of siginificant words.</title>
            <min>0</min>
        </field>
        <value>20</value>
  </record>
  <record name="collective.jekyll.symptoms.LinksInBodySymptom.minimum">
        <field type="plone.registry.field.Int">
            <title>Body text: minimum number of links.</title>
            <min>0</min>
        </field>
        <value>2</value>
  </record>
  <record name="collective.jekyll.symptoms.ImageSizeSymptom.width">
        <field type="plone.registry.field.Int">
            <title>Width of image</title>
            <min>0</min>
        </field>
        <value>675</value>
  </record>
  <record name="collective.jekyll.symptoms.ImageSizeSymptom.height">
        <field type="plone.registry.field.Int">
            <title>Height of image</title>
            <min>0</min>
        </field>
        <value>380</value>
  </record>
</registry>
